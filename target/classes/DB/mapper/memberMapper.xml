<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.coupang.s5.member.memberDAO">

<sql id="search">
	like '%'||#{search}||'%'
</sql>

	<select id="memberCount" parameterType="com.coupang.s5.memberPage.MemberPager">
		select count(num) from member
		<where>
			<if test="kind =='mi'">
				id <include refid="search"></include>
			</if>
		
			<if test="kind =='mn'">
				name <include refid="search"></include>
			</if>
		
			<if test="kind =='mp'">
				phone <include refid="search"></include>
			</if>
		
			<if test="kind =='me'">
				email <include refid="search"></include>
			</if>
		</where>
	</select>




	<select id="memberList" resultType="com.coupang.s5.member.MemberVO" parameterType="com.coupang.s5.memberPage.MemberPager">
		select * from
		(select N.*, rownum R from
		(select * from member where 
		<choose>
			<when test="kind == 'mi'">
				id
			</when>
		
			<when test="kind == 'mn'">
				name
			</when>
		
			<when test="kind == 'mp'">
				phone
			</when>
			
			<otherwise>
				email
			</otherwise>
		</choose>
			<include refid="search"/> and num >=1 order by num desc) N)
			where R BETWEEN #{startRow} and #{lastRow}
	</select>














</mapper>